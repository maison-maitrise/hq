---
import Layout from "../layouts/layout.astro";
---

<Layout title="#SummerValentine">
  <main
    class="w-[100vw] flex items-center justify-center bg-black overflow-x-hidden bg-red-revolt"
  >
    <div
      class="flex flex-col items-center text-center max-w-full p-4 lg:px-64 bg-red-revolt"
    >
      <div
        class="flex flex-col items-center gap-[100px] lg:gap-[250px] max-w-full h-fit"
      >
        <img class="w-full" src="img/laniya-marry-me.png" />
        <div
          class="flex flex-col items-center space-y-[-12vw] max-w-[75vw] relative"
        >
          <img class="max-w-[460px] w-[24vw] z-10" src="img/ig-msg.png" />
          <div
            class="absolute top-[0px] -translate-y-[15%] z-30 text-[#fff] font-maison font-light text-2xl lg:text3xl"
          >
            <h2 class="text-tender-pink">#EroticExploration</h2>
            <h2 class="font-bold text-3xl lg:text-[48px]">#SummerValentine</h2>
            <h2 class="text-tender-pink">#Divergent</h2>
          </div>
          <div
            class="absolute inset-0 top-[200px] translate-y-full z-30 text-[#fff] font-maison font-light text-2xl lg:text3xl"
          >
            <h2 class="text-tender-pink">#EroticExploration</h2>
            <h2 class="font-bold text-3xl lg:text-[48px]">#SummerValentine</h2>
            <h2 class="text-tender-pink">#Divergent</h2>
          </div>
          <div class="relative z-0">
            <img class="max-w-[75vw]" src="img/chey-msg.png" />
          </div>
          <img
            class="max-w-[460px] w-[24vw] relative z-10"
            src="img/bri-m-sg.png"
          />
        </div>

        <img class="max-lg:pt-12" src="img/PR-4-Face.png" />
      </div>
    </div>
  </main>
</Layout>
